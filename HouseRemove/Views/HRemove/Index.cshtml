@model IEnumerable<HouseRemove.Models.HRemove>
@{
    ViewBag.Title = "项目管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- page heading start-->
<div class="page-heading">
    <h3>
        项目管理
    </h3>
    <ul class="breadcrumb">
        <li>
            <a href="#">主页</a>
        </li>
        <li class="active"> 项目管理 </li>
    </ul>
</div>

<!-- page heading end-->
<!--body wrapper start-->
<div class="wrapper">
    @Html.ValidationSummary()
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                    项目管理
                    <span class="tools pull-right">
                        <a href="javascript:;" class="fa fa-chevron-down"></a>
                        <a href="javascript:;" class="fa fa-times"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <div class="clearfix">
                        <div class="btn-group">                            
                            @Html.ActionLink("添加 +","Add",new { id=0},new { @class="btn btn-primary"})
                        </div>                                                
                    </div>
                    <table class="table  table-hover general-table">
                        <thead>
                            <tr>
                                <th> 编号</th>
                                <th class="hidden-phone">项目名称</th>
                                <th class="hidden-phone">拆迁户数量</th>
                                <th>操作</th>                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem=>item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Householdes.Count)</td>
                                    <td>
                                        @Html.ActionLink("编辑","Add",new { id=item.Id})
                                        |
                                        @Html.ActionLink("删除","Del",new { id=item.Id},new { onclick="javascript:return confirm('确定删除？');"})
                                    </td>
                                </tr>
                            }                           
                            
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>

</div>

@section scripts{
    <script>
    $(document).ready(function(){
            $(".custom-nav li").each(function(i,n){
                $(n).removeClass("nav-active");
                $(n).removeClass("active");
            });

            $('.nav_setting').addClass("nav-active");
            $(".subnav_hremove").addClass("active");
    });
</script>
    }
